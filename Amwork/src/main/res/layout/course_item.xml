<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imge"
            android:src="@mipmap/text"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="测试吃试生产四川省手持式"
            android:layout_alignBottom="@+id/imge"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"
            android:layout_alignLeft="@+id/imge"
            android:layout_alignStart="@+id/imge"
            android:layout_alignRight="@+id/imge"
            android:layout_alignEnd="@+id/imge" />
    </RelativeLayout>
</LinearLayout>