<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/diliver"
    android:layout_height="wrap_content">



    <LinearLayout
        android:id="@+id/empty_ly"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="暂无课程"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/image_rl"
        android:background="@color/ground_universal_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:textSize="16sp"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/teacher_and_date"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:padding="10dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </RelativeLayout>

    <!--Tilte and teacher-->
    <LinearLayout
        android:id="@+id/content_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/ground_universal_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/titletextcolor"
            android:layout_gravity="center_vertical"
            android:text="12课时"/>


        <TextView
            android:id="@+id/teachername_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:textColor="@color/tv_universal_color"
            android:layout_gravity="center_vertical"
            android:text=""/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_screen"
        android:background="@color/ground_universal_white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/smallbutton_size"
            android:layout_height="@dimen/smallbutton_size"
            android:layout_gravity="center"
            android:src="@mipmap/img_prefecturedetail_moods"/>
        <TextView
            android:id="@+id/renqi_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:paddingLeft="@dimen/padding_screen"
            android:textColor="@color/titletextcolor"
            android:layout_gravity="center_vertical"
            android:text="人气1122"/>

        <TextView
            android:id="@+id/keshi_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingLeft="@dimen/padding_screen"
            android:textColor="@color/titletextcolor"
            android:layout_gravity="center_vertical"
            android:text="12课时"/>

        <TextView
            android:id="@+id/price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="@dimen/small_size"
            android:padding="@dimen/padding_screen"
            android:textColor="@color/tv_orange"
            android:layout_gravity="center_vertical"
            android:text="￥1000.00"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#E6E6E6"/>

</LinearLayout>