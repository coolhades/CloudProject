<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:padding="@dimen/padding_screen"
            android:layout_marginLeft="@dimen/padding_screen"
            android:background="@color/ground_universal_white"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/btn_universal_back"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:gravity="right"
                android:layout_gravity="center_vertical"
                android:textColor="#333333"
                android:text=""/>

            <ImageView
                android:id="@+id/title_img"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                android:visibility="visible"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/btn_opendialog_icon"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/search_bt"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:visibility="invisible"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:src="@mipmap/img_search_icon"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E6E6E6"/>
</LinearLayout>