<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:minWidth="400dp"
              android:background="@color/ground_universal_white"
              android:layout_height="wrap_content">
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_screen"
        android:textColor="@color/tv_universal_hintcolor"
        android:textSize="@dimen/title_size"
        android:gravity="center"
        android:text="@string/TV_COURSE"/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/tv_universal_hintcolor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="wrap_content">
        
        
        <ImageView
            android:id="@+id/wx_bt"
            android:layout_width="0dp"
            android:layout_height="@dimen/bigbutton_size"
            android:layout_weight="1"
            android:src="@mipmap/wx_img"/>


        <ImageView
            android:id="@+id/wx_friend_bt"
            android:layout_width="0dp"
            android:layout_height="@dimen/bigbutton_size"
            android:layout_weight="1"
            android:src="@mipmap/ic_wx_friend"/>


        <ImageView
            android:id="@+id/sina_bt"
            android:layout_width="0dp"
            android:layout_height="@dimen/bigbutton_size"
            android:layout_weight="1"
            android:src="@mipmap/sina_img"/>
        
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/tv_universal_hintcolor"/>
    
    
    <ImageView
        android:id="@+id/close_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/smallbutton_size"
        android:layout_marginBottom="@dimen/smallbutton_size"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/btn_universal_cancel"/>
    

</LinearLayout>