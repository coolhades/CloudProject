<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/announce_ly"
        android:layout_below="@+id/homefragment_viewpager"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/announce_size">

        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@mipmap/btn_notify_icon"
            android:layout_marginLeft="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />


        <com.hades.mylibrary.base.ui.customview.VerticalTextview
            android:id="@+id/textbanner"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        </com.hades.mylibrary.base.ui.customview.VerticalTextview>

    </LinearLayout>

</LinearLayout>